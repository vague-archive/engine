{
  "tasks": {
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "@vaguevoid/engine": "./../../../js/src/lib.ts",
    "ext:core/ops": "./src/global.d.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "src/"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-var"
      ]
    }
  }
}